#include <stdio.h>
int main()
{  int sec=0;
   int min=0;
   int hrs=0;
   printf("Enter the value of seconds");
   scanf("%d",sec);
   if(sec<=3600)
   {
      min=sec/60;
      sec=sec%60;
   }
    else
   {
      hrs=sec/3600;
      sec=sec%3600;
      min=min/60;
      sec=sec%60;
   }
    printf("\n%d",hrs);
    printf(": %d",min);
    printf(": %d",sec);
    return 0;
}
