#include <stdio.h>

int main() {
   int num;
   printf("Enter the size of the  array:");
   scanf("%d",&num);
   int a[num];
   for(int i=0;i<num;++i)
   {
      printf("Enter a number:");
      scanf("%d",&a[i]);
   }
   int n;
   int k;
   printf("Enter the place which is to be deleted");
   scanf("%d",&n);
  
   for(int i=n;i<num;++i)
   {
       a[i]=a[i+1];
   }
   a[num]=0;
   for(int j=0;j<num-1;++j)
   {
       printf("\n%d",a[j]);
   }
    return 0;
}
