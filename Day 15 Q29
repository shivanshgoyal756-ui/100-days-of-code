#include <stdio.h>
int fact(int num)
{
    if(num==0)
    return 0;
    else
    {
    if(num==1)
    return 1;
    else 
    return num*fact(num-1);
    }
}

int main() {
    int num;
    printf("Enter the number");
    scanf("%d",&num);
    int r=fact(num);
    printf("\nThe factorial is %d",r);
    

    return 0;
}
