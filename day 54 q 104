#include <stdio.h>

int main() {
   int num;
   printf("Enter the number ");
   scanf("%d",&num);
   int sum1=0;
   int sum2=0;
   int c=0;
   for(int i=1;i<=num;++i)
   {
      for(int j=1;j<=i;++j)
      {
          sum1=sum1+j;
      }
      for(int b=i;b<=num;++b)
      {
          sum2=sum2+b;
      }
      if(sum1==sum2)
      {
          printf("\n%d",i);
          c=1;
          break;
      }
     
      sum1=0;
      sum2=0;
   }
   if(c==0)
   printf("\n-1");
    return 0;
}
