#include <stdio.h>

void db(int n) {
    if (n > 1) {
      db(n / 2); 
    }
    if(n%2==0)
    printf("1");
    else
    printf("0");
}

int main() {
    int num;

    printf("Enter a decimal number: ");
    scanf("%d", &num);

    printf("Binary representation: ");
    if (num == 0) {
        printf("0"); 
    } else {
        db(num);
    }
    printf("\n");

return 0;
}
