#include <stdio.h>

int main() {
   int n,m;
   printf("Enter the row number and column number :");
   scanf("%d%d",&n,&m);
   int mat[n][m];
   for(int i=0;i<n;++i)
   {
       for(int j=0;j<m;++j)
       {
           printf("enter the number of %d row :",i+1);
           scanf("%d",&mat[i][j]);
       }
   }
   int sum=0;

for(int a=0;a<n;++a)
   {
       for(int b=0;b<m;++b)
       {
           sum=sum+mat[a][b];
          
       }
   }
    printf("The sum of the numbers is : %d",sum);
    return 0;
}
