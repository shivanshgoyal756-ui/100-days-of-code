#include <stdio.h>

int main() {
   int num;
   int target;
   printf("Enter how many number are to be inputed");
   scanf("%d",&num);
   int a[num];
   int sum1=0;
   int sum2=0;
   printf("\nEnter the array numbers");
   for(int i=0;i<num;++i)
   {
       scanf("%d",&a[i]);
   }
   int c=0;
   for(int i=0;i<num;++i)
   {
      for(int j=0;j<i;++j)
      {
          sum1=sum1+a[j];
      }
      for(int b=i+1;b<num;++b)
      {
          sum2=sum2+a[b];
      }
      if(sum1==sum2)
      {
          printf("\n%d",i);
          c=1;
          break;
      }
     
      sum1=0;
      sum2=0;
   }
   if(c==0)
   printf("\n-1");
    return 0;
}
