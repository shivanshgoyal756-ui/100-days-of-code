#include <stdio.h>

int main() {
   int n,m;
   printf("Enter the row number and column number :");
   scanf("%d%d",&n,&m);
   int sum[n];
   int mat[n][m];
   for(int i=0;i<n;++i)
   {
       for(int j=0;j<m;++j)
       {
           printf("enter the number of %d row :",i+1);
           scanf("%d",&mat[i][j]);
       }
   }

for(int a=0;a<n;++a)
   {
       sum[a]=0;
       for(int b=0;b<m;++b)
       {
           
           sum[a]=sum[a]+mat[a][b];
          
       }
       printf ("\nThe sum of the %d row is %d",a+1,sum[a]);
   }
 

    return 0;
}
